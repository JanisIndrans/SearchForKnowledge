@model SearchForKnowledge.ViewModels.UsersNew
@{
    ViewBag.Title = "User";

}

@using (Html.BeginForm()) {



    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                <h2>Sign up as a new user!</h2>
            </div>
        </div>
        <div class="panel-body registerPanel">
            @Html.ValidationSummary()
            <div class="form-group-sm">
                @Html.LabelFor(u => u.Username)
                @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })

            </div>
            <div class="form-group-sm">
                @Html.LabelFor(u => u.Password)
                @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })
            </div>
            <div class="form-group-sm">
                @Html.LabelFor(u => u.SchoolName)
                @Html.TextBoxFor(u => u.SchoolName, new { @class = "form-control" })
            </div>
            <div class="form-group-sm">
                @Html.LabelFor(u => u.Country)
                @Html.TextBoxFor(u => u.Country, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.City)
                @Html.TextBoxFor(u => u.City, new { @class = "form-control" })
            </div>
            

            <input type="submit" value="Sign up" class="btn btn-primary myBtn" />
            <a href="#"><div class="forText">or cancel</div></a>
        </div>
    </div>
}
