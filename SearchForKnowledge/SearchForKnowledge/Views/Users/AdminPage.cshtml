@model SearchForKnowledge.ViewModels.AdminPage

@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()


    <div class="panel panel-default" >
        <div class="panel-heading">
            <div class="panel-title">
                <h2>Admin Page</h2>
            </div>
        </div>
        <div class="panel-body registerPanel">
            @Html.ValidationSummary()
            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.Username)</div>
                <div class="panelInput">
                    @Html.TextBoxFor(u => u.Username, new {@class = "form-control"})</div>
                </div>

            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.Password)</div>
                    <div class="panelInput">
                        @Html.PasswordFor(u => u.Password, new {@class = "form-control"})
                    </div>
                </div>

            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.SchoolName)</div>
                <div class="panelInput">
                    @Html.TextBoxFor(u => u.SchoolName, new {@class = "form-control"})</div>
                </div>

            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.Country)</div>
                <div class="panelInput">
                    @Html.TextBoxFor(u => u.Country, new {@class = "form-control"})</div>
                </div>

            <div class="form-group">
                <div class="panelItems">
                    @Html.LabelFor(u => u.City)</div>
                <div class="panelInput">
                    @Html.TextBoxFor(u => u.City, new {@class = "form-control"})</div>
                </div>

            <div class="form-group">
                <div class="panelItems">
                    @Html.LabelFor(u => u.Type)</div>
                <div class="panelInput">
                    @Html.TextBoxFor(u => u.Type, new { @class = "form-control" })
                </div>
                </div>


            <input type="submit" value="Update" class="btn btn-primary myBtn"/>
            <a href="@Url.RouteUrl("Home")"><div class="forText">or cancel</div></a>
        </div>
    </div>
}