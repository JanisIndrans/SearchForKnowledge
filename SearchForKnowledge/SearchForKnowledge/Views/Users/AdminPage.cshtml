@model SearchForKnowledge.ViewModels.AdminPage

@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()


    <div class="panel panel-default" >
        <div class="panel-heading">
            <div class="panel-title">
                <h2>Admin Page</h2>
            </div>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary()
            <div class="form-group-sm">
                @Html.LabelFor(u => u.Username)
                @Html.TextBoxFor(u => u.Username, new {@class = "form-control"})
            </div>

            <div class="form-group-sm">
                @Html.LabelFor(u => u.Password)
                @Html.PasswordFor(u => u.Password, new {@class = "form-control"})
            </div>

            <div class="form-group-sm">
                @Html.LabelFor(u => u.SchoolName)
                @Html.TextBoxFor(u => u.SchoolName, new {@class = "form-control"})
            </div>

            <div class="form-group-sm">
                @Html.LabelFor(u => u.Country)
                @Html.TextBoxFor(u => u.Country, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.City)
                @Html.TextBoxFor(u => u.City, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.Type)
                @Html.TextBoxFor(u => u.Type, new { @class = "form-control" })
            </div>


            <input type="submit" value="Update" class="btn btn-primary"/>
            <a href="@Url.RouteUrl("Home")">or cancel</a>
        </div>
    </div>
}