@model SearchForKnowledge.ViewModels.PostsShowAll
@{
    ViewBag.Title = "Index";
}
<div>
    <h2>
        Recently Added
    </h2>

    <div class="panel-group" id="accordion">

        @for(int x = 0; x < Model.Posts.Count; x++)
        {
            
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse_@x">@Model.Posts.ElementAt(x).BookTitle</a>
                            <a data-toggle="collapse" class="pull-right" data-parent="#accordion" href="#">@Model.Posts.ElementAt(x).CategoryId</a>
                        </h4>
                    </div>
                    @if (x == 0)
                    {
                        <div  id="collapse_@x" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <div id="contentPicture"></div>
                                <div class="panel pre-scrollable" id="contentDescription">
                                    Description: @Model.Posts.ElementAt(x)..Description
                                </div>
                                <div id="contentFooter">
                                    <a href="#"><i class="glyphicon glyphicon-thumbs-up"></i> 7</a> |
                                    <a href="#"><i class="glyphicon glyphicon-thumbs-down"></i> 3</a> |
                                    <a href="#">Comments: 0</a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div id="collapse_@x" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div id="contentPicture"></div>
                                <div class="panel pre-scrollable" id="contentDescription">
                                    Description: @Model.Posts.ElementAt(x)..Description
                                </div>
                                <div id="contentFooter">
                                    <a href="#"><i class="glyphicon glyphicon-thumbs-up"></i> 7</a> |
                                    <a href="#"><i class="glyphicon glyphicon-thumbs-down"></i> 3</a> |
                                    <a href="#">Comments: 0</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            
        }

    </div>
</div>

