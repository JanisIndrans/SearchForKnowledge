@model SearchForKnowledge.ViewModels.PostsNew
@{
    ViewBag.Title = "CreatePost";
}

@using (Html.BeginForm("CreatePost", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="panel panel-default registerPanel">
        <div class="panel-heading">
            <div class="panel-title">
                <h2>Create your post</h2>
            </div>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary()
            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.BookTitle)</div>
                    <div class="panelInput">
                        @Html.TextBoxFor(u => u.BookTitle, new {@class = "form-control"})
                    </div>

                </div>

            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.Author)</div>
                    <div class="panelInput">
                        @Html.TextBoxFor(u => u.Author, new {@class = "form-control"})
                    </div>
                </div>
            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.UserId)</div>
                <div class="panelInput">
                    @Html.TextBoxFor(u => u.UserId, new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group-sm">
                <div class="panelItems">
                    @Html.LabelFor(u => u.CategoryId)</div>
                <div class="panelInput">
                    @Html.TextBoxFor(u => u.CategoryId, new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                <div class="panelItems">
                    @Html.LabelFor(u => u.Description)</div>
                    <div class="panelInput">
                        @Html.TextBoxFor(u => u.Description, new {@class = "form-control"})
                    </div>
                </div>

            <div class="input-group">
                <div class="panelItems">Select book cover!</div>
                <div class="panelItems">
                    @Html.TextBoxFor(u => u.ImgFile, new { type = "file" })</div>
                </div>
            <br/>

            <input type="submit" value="Create!" class="btn btn-primary myBtn" />
            <a href="@Url.RouteUrl("Home")"><div class="forText">or cancel</div></a>
        </div>
    </div>
    
            }
