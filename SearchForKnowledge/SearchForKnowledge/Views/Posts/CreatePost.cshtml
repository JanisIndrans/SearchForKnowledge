@model SearchForKnowledge.ViewModels.PostsNew
@{
    ViewBag.Title = "CreatePost";
}

@using (Html.BeginForm("CreatePost", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                <h2>Create your post</h2>
            </div>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary()
            <div class="form-group-sm">
                @Html.LabelFor(u => u.BookTitle)
                @Html.TextBoxFor(u => u.BookTitle, new {@class = "form-control"})

            </div>

            <div class="form-group-sm">
                @Html.LabelFor(u => u.Author)
                @Html.TextBoxFor(u => u.Author, new {@class = "form-control"})
            </div>
            <div class="form-group-sm">
                @Html.LabelFor(u => u.UserId)
                @Html.TextBoxFor(u => u.UserId, new {@class = "form-control"})
            </div>
            <div class="form-group-sm">
                @Html.LabelFor(u => u.CategoryId)
                @Html.TextBoxFor(u => u.CategoryId, new {@class = "form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.Description)
                @Html.TextBoxFor(u => u.Description, new {@class = "form-control"})
            </div>

            <div class="input-group">
                @Html.TextBoxFor(u => u.PicturePath, new { type = "file" })
            </div>

            @*<div class="input-group">
                <span class="input-group-btn btn-file">Browse</span>
                <input type="file">
            </div>*@

            <input type="submit" value="Create!" class="btn btn-primary" style="margin-top: 12px;" />
            <a href="@Url.RouteUrl("Home")">or cancel</a>
        </div>
    </div>
    
            }
